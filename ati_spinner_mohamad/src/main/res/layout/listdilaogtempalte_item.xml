<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:focusableInTouchMode="false">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#FFCDD2"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp"
        app:contentPadding="1dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFF"
            app:cardCornerRadius="15dp"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_2"
                android:focusable="false"
                android:focusableInTouchMode="false"
                >

                    <CheckBox
                        android:id="@+id/checkBox_survey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="0dp"
                        android:buttonTint="#2ECC71"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_responseOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical|right"
                    android:text="........"
                    android:textColor="#000"
                    app:layout_constraintBottom_toBottomOf="@+id/checkBox_survey"
                    app:layout_constraintRight_toLeftOf="@+id/checkBox_survey"
                    app:layout_constraintTop_toTopOf="@+id/checkBox_survey" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>